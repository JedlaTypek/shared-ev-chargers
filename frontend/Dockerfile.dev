FROM node:20

WORKDIR /app

# Copy dependency definitions
COPY package*.json ./

# Install dependencies (including devDependencies for Vite)
RUN npm install

# Copy source code (will be overridden by volume in docker-compose, but good for completeness)
COPY . .

# Expose Vite default port
EXPOSE 5173

# Start development server with host flag to permit external access
CMD ["npm", "run", "dev", "--", "--host"]
